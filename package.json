{
  "name": "kelphr-conductos",
  "version": "1.0.0",
  "description": "KelpHR ConductOS - Case Management Application",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "build": "npm run build --workspace=client",
    "start": "npm start --workspace=server",
    "railway:build": "npm install && npm run build --workspace=client",
    "railway:start": "cd server && npm install && node index.js",
    "db:init": "cd server && node -e \"import('./db/pg-init.js').then(m => m.initializeDatabase()).then(() => process.exit(0)).catch(e => { console.error(e); process.exit(1); })\"",
    "db:seed": "cd server && node db/seed.js",
    "seed:demo": "cd server && node scripts/seedDemoData.js",
    "seed:users": "cd server && node scripts/seedUsers.js",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:employee": "playwright test tests/employee-mode.spec.js",
    "test:ic": "playwright test tests/ic-mode.spec.js",
    "test:intake": "playwright test tests/intake-flow.spec.js",
    "test:cases": "playwright test tests/case-management.spec.js",
    "test:mobile": "playwright test tests/mobile.spec.js --project='Mobile Chrome'",
    "test:report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^8.2.2"
  }
}
