          "name": "Update Case Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"investigating\",\n  \"notes\": \"IC has initiated investigation. Evidence collection phase.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/cases/{{last_case_code}}/status",
              "host": ["{{base_url}}"],
              "path": ["api", "cases", "{{last_case_code}}", "status"]
            },
            "description": "Update case status with notes"
