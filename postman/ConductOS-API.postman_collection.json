    {
      "name": "Cases Management",
      "item": [
        {
          "name": "Get All Cases (Role-Based)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/cases",
              "host": ["{{base_url}}"],
              "path": ["api", "cases"]
            },
            "description": "Get all cases. Employees see only their cases, IC members see all."
          }
        },
        {
          "name": "Get Cases - Filter by Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/cases?status=new",
              "host": ["{{base_url}}"],
              "path": ["api", "cases"],
              "query": [
                {
                  "key": "status",
                  "value": "new",
                  "description": "Status: new, under_review, conciliation, investigating, decision_pending, closed"
                }
              ]
            },
            "description": "Filter cases by status"
          }
        },
        {
          "name": "Get Cases - Overdue Only",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/cases?is_overdue=true",
              "host": ["{{base_url}}"],
              "path": ["api", "cases"],
              "query": [
                {
                  "key": "is_overdue",
                  "value": "true"
                }
              ]
            },
            "description": "Get only overdue cases (past 90-day deadline)"
          }
        },
