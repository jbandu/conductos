          "name": "Get Case History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/cases/{{last_case_code}}/history",
              "host": ["{{base_url}}"],
              "path": ["api", "cases", "{{last_case_code}}", "history"]
            },
            "description": "Get complete status change history for a case"
