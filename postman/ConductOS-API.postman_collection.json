              "path": ["api", "cases"],
              "query": [
                {
                  "key": "search",
                  "value": "harassment",
                  "description": "Search in case_code or description"
                }
              ]
            },
            "description": "Search cases by keyword"
          }
        },
        {
          "name": "Get Single Case by Code",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/cases/KELP-2025-0001",
              "host": ["{{base_url}}"],
              "path": ["api", "cases", "KELP-2025-0001"]
            },
            "description": "Get detailed case information including status history"
          }
        },
        {
          "name": "Create Case - Authenticated",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('last_case_code', jsonData.case.case_code);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"incident_date\": \"2025-11-15\",\n  \"description\": \"This is a test case with a detailed description that meets the minimum 50 character requirement for case creation. The incident involved inappropriate comments during a team meeting.\",\n  \"is_anonymous\": false,\n  \"complainant_name\": \"Test User\",\n  \"complainant_email\": \"test@example.com\",\n  \"conciliation_requested\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/cases",
              "host": ["{{base_url}}"],
              "path": ["api", "cases"]
            },
            "description": "Create a new case with authentication - complainant_id will be auto-set"
          }
        },
        {
          "name": "Create Case - Anonymous",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"incident_date\": \"2025-11-20\",\n  \"description\": \"This is an anonymous complaint with sufficient details to meet the minimum character requirement. The incident occurred in the workplace and requires immediate attention from the Internal Committee.\",\n  \"is_anonymous\": true,\n  \"anonymous_alias\": \"Concerned Employee\",\n  \"contact_method\": \"Phone: +91-9876543210 (available 6-8 PM)\",\n  \"conciliation_requested\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/cases",
              "host": ["{{base_url}}"],
              "path": ["api", "cases"]
            },
            "description": "Create an anonymous case without authentication"
          }
        },
